<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardMaxElevation="5dp"
    card_view:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9ffaa">

        <TextView
            android:id="@+id/auteur_cardview_commentaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auteur Commentaire"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/commentaire_cardview_commentaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Le message du commentaire"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/auteur_cardview_commentaire"/>



    </RelativeLayout>


</androidx.cardview.widget.CardView>